@using DataModelLibrary
@{
    ViewBag.Title = "UploadStudent";
}

@Scripts.Render("~/bundles/ExcelUploadStudent")

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Student List</h3>
    </div>
    <div class="panel-body">
        <div id="grid" class="jqGrid">
            @using (Html.BeginForm("", "", null, FormMethod.Post,
                new { Id = "bulkuploadstudentform", name = "bulkuploadstudentform", enctype = "multipart/form-data", @class = "form form-inline" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form‐group">
                    <span class="text-info">Please select a Input file</span>
                    <input type="file" id="dataFile" name="upload" class="form-control" /> 
                    <br />
                    <br />
                    <div class="col-md-offset-2 col-sm-offset-2 col-lg-offset-2">
                        <input type="button" value="Upload" id="btnupload" class="btn btn-success" />
                        <input type="button" value="Reset File" id="btn-reset" class="btn btn-warning" />
                    </div>
                </div>
               
            }
        </div> 
    </div>
</div>
<div class="modal " id="StudentModal" tabindex="-1" role="dialog" aria-labelledby="StudentModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @*<div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="StudentModalLabel">Upload Confirm</h4>
            </div>*@
            <div class="modal-body resize-scroll">
                <div id="divuploadconfirm" >Are you sure want to upload ?
                    <button type="button" class="btn btn-success btn-sm" data-loading-text="Loading ..." autocomplete="off" id="btnstudentconfirm">Confirm</button>
                </div>
                <div class="row">
                    <div class="container">
                        <div class="col-md-12 col-sm-12"  id="ErrorResultArea"></div>
                    </div>
                </div> 
                <div class="row">
                    <div class="container">
                        <div class="col-md-12 col-sm-12" id="SuccessResultArea"></div>
                    </div>
                </div> 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" id="btn-close" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal  bs-example-modal-sm" tabindex="-1" id="bsmodalinputfile" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="StudentModalLabel">Error in Input File</h4>
            </div>
            <div class="modal-body">
                <div id="divmodalvalidate"></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
            </div>
            </div>
    </div>
</div>

